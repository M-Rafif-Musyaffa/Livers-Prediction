<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderv1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_column"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="tv_column"
                android:textColor="@color/c1"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_penjelasan"
                android:layout_width="0dp"
                android:textColor="@color/c1"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="16dp"
                android:justificationMode="inter_word"
                android:text="tv_penjelasan"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/dytpe"
                app:layout_constraintStart_toStartOf="@+id/tv_column"
                app:layout_constraintTop_toBottomOf="@+id/tv_column" />

            <TextView
                android:id="@+id/tv_dimensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textColor="@color/c1"
                android:text="tv_dimensi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/jumlah" />

            <TextView
                android:id="@+id/jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:text="Jumlah kolom"
                android:textColor="@color/c1"
                app:layout_constraintEnd_toStartOf="@+id/tv_dimensi"
                app:layout_constraintTop_toTopOf="@+id/tv_column" />

            <TextView
                android:id="@+id/dytpe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Dytpe"
                android:textColor="@color/c1"
                app:layout_constraintStart_toStartOf="@+id/jumlah"
                app:layout_constraintTop_toBottomOf="@+id/jumlah" />

            <TextView
                android:id="@+id/typeData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="TextView"
                android:textColor="@color/c1"
                app:layout_constraintStart_toEndOf="@+id/dytpe"
                app:layout_constraintTop_toTopOf="@+id/dytpe" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</LinearLayout>